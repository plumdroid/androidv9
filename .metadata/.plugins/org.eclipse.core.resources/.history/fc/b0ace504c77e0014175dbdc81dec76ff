package com.example.dracon.myapplication.Display;

import android.app.Activity;
import android.app.ListActivity;
import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.AdapterView;
import android.widget.ArrayAdapter;
import android.widget.ListView;
import android.widget.TextView;
import android.widget.Toast;
import android.os.Environment;
import java.io.*;
import java.util.ArrayList;
import android.util.*;

public class Display extends ListActivity
        implements AdapterView.OnItemClickListener {

    @Override
    public void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);

        setContentView(R.layout.activity_my);

        //lier la liste des pays au layout 'list' à l'aide d'un adaptateur (tableau)
        ArrayList<String> Toutou= getToutouinfo();
        ArrayAdapter<String> listToutou=new ArrayAdapter<String>(this,
                R.layout.list_item, Toutou);

        //l'adaptateur Sert de source de données au ListView
        setListAdapter(listToutou);

        //modifier la propriété filtre du ListView
        ListView lv = getListView();
        lv.setTextFilterEnabled(true);

        /** écouteur */
        lv.setOnItemClickListener(this);
    }
    public void onItemClick(AdapterView<?> ad, View v, int pos, long id) {
        // When clicked, show a toast with the TextView text
        TextView item=(TextView) v;
        CharSequence texte=item.getText();
        Toast toast = Toast.makeText(getApplicationContext(),texte,Toast.LENGTH_SHORT);
        toast.show();
    }
    private ArrayList<String> getToutouinfo() {

        String strFile = Environment.getExternalStorageDirectory()
                + File.separator+"TOUTOU"
                +File.separator+"toutou.csv";

        ArrayList<String> toutouinfo = new ArrayList<String>();
        String text=getIntent().getStringExtra("com.example.dracon.myapplication.texte");


        try {
            FileInputStream fis = new FileInputStream(strFile);
            InputStreamReader isr = new InputStreamReader(fis,"ISO-8859-1");     //encodage fichier source iso-8859-1
            BufferedReader bufer = new BufferedReader(isr);

            String line = bufer.readLine();
            line = bufer.readLine();

            while (line != null) {
                String nom[]=line.split(",");
                if(nom[0].equals(text)) {
                    toutouinfo.add("Nom chien : "+nom[0]);
                    toutouinfo.add("Age du chien : "+nom[1]);
                    toutouinfo.add("Nom proprio : "+nom[2]);
                    toutouinfo.add("Adresse proprio : "+nom[3]);
                    toutouinfo.add("Tel proprio : "+nom[4]);
                }
                line = bufer.readLine();
            }
        }  // fin try

        catch (FileNotFoundException e) {
            Log.w("TAG", "Error file: " + e.getMessage());
        }  // fin catch
        catch (UnsupportedEncodingException e) {
            // TODO Auto-generated catch block
            e.printStackTrace();
        } catch (IOException e) {
            // TODO Auto-generated catch block
            e.printStackTrace();
        }

        return  toutouinfo;

    }


}