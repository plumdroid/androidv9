<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
                android:background="#80FF00"
              android:orientation="vertical" >  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     android:padding="10px" >

       <TextView
        android:id="@+id/acnomsoc_label"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_width="60px"
        android:text="Nom société :"/>
        <EditText
        android:id="@+id/acnomsoc"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/acnomsoc_label"
        android:layout_alignTop="@id/acnomsoc_label"
        android:inputType="number"
        android:background="@android:drawable/editbox_background"
       />
        <TextView
        android:id="@+id/accontact_label"
        android:layout_below="@id/acnomsoc"
        android:layout_width="60px"
        android:layout_height="wrap_content"
        android:textColor="#000000"
     	android:layout_marginTop="10dip"
        android:text="Contact:"/>
        <EditText
        android:id="@+id/accontact"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/accontact_label"
        android:layout_alignTop="@id/accontact_label"
        android:background="@android:drawable/editbox_background"
       />
       <TextView
        android:id="@+id/actel_label"
        android:layout_below="@id/accontact"
        android:layout_width="60px"
        android:layout_height="wrap_content"
        android:textColor="#000000"
       
        android:text="Tél.:"/>
        <EditText
        android:id="@+id/actel"
        android:layout_width="120px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/actel_label"
        android:layout_alignTop="@id/actel_label"
        android:inputType="number"
        android:background="@android:drawable/editbox_background"
       />
   </RelativeLayout>
   <LinearLayout
		      android:orientation="vertical"
		      android:layout_width="fill_parent"
		      android:layout_height="fill_parent"
		      > 
		<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   			android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		 android:background="#40A468"
     		android:padding="10px" >
         <Button
    	android:id="@+id/acclose"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
        android:text="Fermer" />
         <Button
        android:id="@+id/acadd"
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/acclose"
        android:layout_alignTop="@id/acclose"
        android:layout_marginLeft="10dip"
        android:text="Ajouter" />
      </RelativeLayout>      
	 </LinearLayout>
 </LinearLayout>
   
