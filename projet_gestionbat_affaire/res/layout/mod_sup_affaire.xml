<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
                android:background="#80FF00"
              android:orientation="vertical" >  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     android:padding="10px" >

     <TextView
        android:id="@+id/mdsuptypeaf_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Type :"/>
        <EditText
        android:id="@+id/mdsuptypeaf"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mdsuptypeaf_label"
        android:layout_alignTop="@id/mdsuptypeaf_label"
        android:background="@android:drawable/editbox_background"
       />
       <TextView
        android:id="@+id/mdsupprix_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_toRightOf="@id/mdsuptypeaf"
        android:layout_alignTop="@id/mdsuptypeaf"
         android:paddingLeft="10dip"
        android:text="Prix :"/>
        <EditText
        android:id="@+id/mdsupprix"
        android:layout_width="120px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mdsupprix_label"
        android:layout_alignTop="@id/mdsupprix_label"
        android:inputType="number"
        android:background="@android:drawable/editbox_background"
       />
        <TextView
        android:id="@+id/mdsupadr_label"
        android:layout_below="@id/mdsuptypeaf"
        android:layout_width="60px"
        android:layout_height="wrap_content"
        android:textColor="#000000"
         android:paddingTop="10dip"
        android:text="Adresse:"/>
        <EditText
        android:id="@+id/mdsupadr"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mdsupadr_label"
        android:layout_alignTop="@id/mdsupadr_label"
        android:background="@android:drawable/editbox_background"
       />
       <TextView
        android:id="@+id/mdsupville_label"
        android:layout_below="@id/mdsupadr"
        android:layout_width="60px"
        android:layout_height="wrap_content"
        android:textColor="#000000"
         android:paddingTop="10dip"
        android:text="Ville:"/>
        <EditText
        android:id="@+id/mdsupville"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mdsupville_label"
        android:layout_alignTop="@id/mdsupville_label"
        android:background="@android:drawable/editbox_background"
       />
   </RelativeLayout>
   <LinearLayout
		      android:orientation="vertical"
		      android:layout_width="fill_parent"
		      android:layout_height="fill_parent"
		      > 
		<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   			android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		 android:background="#40A468"
     		android:padding="10px">
         <Button
    	android:id="@+id/mdsupclose"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
        android:text="Fermer" />
         <Button
        android:id="@+id/mdsupsup"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/mdsupclose"
        android:layout_alignTop="@id/mdsupclose"
        android:layout_marginLeft="10dip"
        android:text="Supprimer" />
         <Button
        android:id="@+id/mdsupmod"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/mdsupsup"
        android:layout_alignTop="@id/mdsupsup"
        android:layout_marginLeft="10dip"
        android:text="Modifier" />
      </RelativeLayout>      
	 </LinearLayout>
	 <LinearLayout 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
              android:background="#80FF00"
              android:orientation="vertical" >             
         <LinearLayout
		      android:orientation="vertical"
		      android:layout_width="fill_parent"
		      android:layout_height="fill_parent"
		      android:layout_weight="1"> 
        <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
         />
          </LinearLayout>
         <LinearLayout
		      android:orientation="vertical"
		      android:layout_width="fill_parent"
		      android:layout_height="fill_parent"
		      android:layout_weight="0"> 
         <Button android:id="@+id/modsupajouter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter un contact" />    
      </LinearLayout>
 </LinearLayout>
	 
 </LinearLayout>